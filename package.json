{
  "name": "aerial-engine-webapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:webapp": "pnpm -F @aerial-engine/aerial-engine-webapp run dev",
    "dev:example": "pnpm -F @aerial-engine/aerial-engine-example  run dev",
    "format": "vsh lint --format",
    "build:webapp": "pnpm run build --filter=@aerial-engine/aerial-engine-webapp",
    "build:docker": "aerial-engine-scripts/deploy/build-local-docker-image.sh",
    "build:example": "pnpm run build --filter=@aerial-engine/aerial-engine-example",
    "postinstall": "pnpm -r run stub --if-present",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@playwright/test": "catalog:",
    "@types/node": "catalog:",
    "@aerial-engine/eslint-config": "workspace:*",
    "@aerial-engine/prettier-config": "workspace:*",
    "@aerial-engine/stylelint-config": "workspace:*",
    "@aerial-engine/tailwind-config": "workspace:*",
    "@aerial-engine/tsconfig": "workspace:*",
    "@aerial-engine/vite-config": "workspace:*",
    "@aerial-engine/vsh": "workspace:*",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/test-utils": "catalog:",
    "autoprefixer": "catalog:",
    "cross-env": "catalog:",
    "cspell": "catalog:",
    "happy-dom": "catalog:",
    "is-ci": "catalog:",
    "lefthook": "catalog:",
    "playwright": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@10.12.4",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "overrides": {
      "@ast-grep/napi": "catalog:",
      "@ctrl/tinycolor": "catalog:",
      "clsx": "catalog:",
      "esbuild": "0.25.3",
      "pinia": "catalog:",
      "vue": "catalog:"
    },
    "neverBuiltDependencies": [
      "canvas",
      "node-gyp"
    ]
  }
}
