{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "env.d.ts",
    "vite.env.d.ts",
    "types/*",
    "types/**/*",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "mocks/*",
    "mocks/**/*",
    "mocks/**/*.ts",
    "mocks/**/*.d.ts",
    "tests/*",
    "tests/**/*",
    "tests/**/*.ts",
    "tests/**/*.d.ts",
    "plugins/*",
    "plugins/**/*",
    "plugins/**/*.ts",
    "plugins/**/*.d.ts",
    "scripts/*",
    "scripts/**/*",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "commitlint.config.*",
    "eslint.config.*",
    "stylelint.config.*",
    "prettier.config.*",
    "postcss.config.*",
    "windi.config.*"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "tests/server/**/*.ts",
    "dist",
    "**/*.js"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "vite/client"
    ]
  }
}
